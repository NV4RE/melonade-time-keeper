{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engines": {
    "node": ">= 10.13 <11"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^10.14.10",
    "jest": "~24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.3.0",
    "tslint": "~5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-microsoft-contrib": "~6.2.0",
    "tsutils": "~3.14.0",
    "typescript": "~3.5.0"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "npm run clean & tsc -p tsconfig.release.json",
    "build:watch": "npm run clean & tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "start:watch": "nodemon"
  },
  "author": "Jakub Synowiec <github@jakubsynowiec.info>",
  "license": "Apache-2.0",
  "dependencies": {
    "@melonade/melonade-declaration": "^0.2.3",
    "@nv4re/node-rdkafka": "^2.7.2",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/mongoose": "^5.5.13",
    "@types/ramda": "^0.26.16",
    "dotenv": "^8.0.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.6.11",
    "mongoose-lean-virtuals": "^0.4.3",
    "ramda": "^0.26.1",
    "tslib": "~1.10.0"
  }
}
